        "transaction": {
          "id": "TEST_003",
          "vendor": "Regular Supplier A",
          "amount": 12000,
          "date": "2025-11-16T12:00:00Z",
          "utr": "UTR123456789",
          "mode": "UPI",
          "type": "debit"
        },
        "expected_outcome": {
          "recommendation": "AVOID",
          "fraud_risk": "high",
          "fraud_flags": ["DUPLICATE_UTR"]
        }
      },
      {

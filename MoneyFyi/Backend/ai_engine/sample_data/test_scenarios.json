{
    "test_scenarios": [
      {
        "scenario_name": "Normal Transaction - Should Approve",
        "description": "Regular supplier, normal amount, good cashflow",
        "transaction": {
          "id": "TEST_001",
          "vendor": "Regular Supplier A",
          "amount": 12000,
          "date": "2025-11-16T10:00:00Z",
          "utr": "UTR_TEST_001",
          "mode": "UPI",
          "type": "debit"
        },
        "expected_outcome": {
          "recommendation": "PAY_FULL",
          "fraud_risk": "low",
          "cashflow_stress": "low"
        }
      },
      {
        "scenario_name": "New Vendor - High Amount - Should Flag",
        "description": "First transaction with unknown vendor, high amount",
        "transaction": {
          "id": "TEST_002",
          "vendor": "Unknown New Company",
          "amount": 75000,
          "date": "2025-11-16T11:00:00Z",
          "utr": "UTR_TEST_002",
          "mode": "UPI",
          "type": "debit"
        },
        "expected_outcome": {
          "recommendation": "AVOID",
          "fraud_risk": "high",
          "fraud_flags": ["NEW_VENDOR", "HIGH_VALUE"]
        }
      },
      {
        "scenario_name": "Duplicate UTR - Should Block",
